import { Paginated } from './paginated.object-type';
import { UserDTO } from '../dto/user.dto';
import { InputType, Field, ObjectType } from '@nestjs/graphql';

@ObjectType()
@InputType('UserInput')
export class User extends UserDTO {
  @Field({nullable: true})
  login: string;
  @Field({nullable: true})
  email: string;
  @Field({nullable: true})
  id?: number;
}

@InputType()
export class CreateUserArgs extends User {
  @Field({nullable: true})
  password: string;
}

@InputType()
export class UpdateUserArgs extends User {
  @Field({nullable: true})
  password: string;
}

@ObjectType()
export class PaginatedUser extends Paginated(User) {}
/* eslint-enable max-classes-per-file*/
